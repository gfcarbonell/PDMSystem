<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Sistema P.D.M - ASP.NET</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/index.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom border-secondary">
        <a class="navbar-brand font-weight-bold" href="#">Sistema - P.D.M.</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link active" })</li>
                <li>@Html.ActionLink("Acerca de", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
             </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <section class="container">
        <hr/>
        @RenderBody()
        <hr />
    </section>
    <footer class="bg-light border-top border-dark">
        <p class="text-center"><span class="font-weight-bold text-danger">&copy;Todos los derechos reservados:</span> <span class="font-weight-bold text-dark">Agrícola Andreas - @DateTime.Now.Year</span> </p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/axios.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/bootstrap-select.js"></script>
    @Scripts.Render("~/bundles/bootstrap-select")
    @RenderSection("scripts", required: false)
</body>
</html>
